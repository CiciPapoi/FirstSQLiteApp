<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.firstsqliteapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/noback"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MySplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.DBOperationsActivity"> </activity>
        <activity android:name=".activities.ItemsListActivity"> </activity>
        <activity
            android:name=".activities.DisplayImageActivity"
            android:parentActivityName="com.example.user.firstsqliteapp.activities.FirstActivity" >
        </activity>
        <activity android:name=".activities.CameraActivity"> </activity>
        <activity android:name=".activities.FirstActivity"> </activity>
        <activity android:name=".activities.Outfit"> </activity>

    </application>

</manifest>
