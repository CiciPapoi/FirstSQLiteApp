<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:background="#EEC97b"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="OutfitMe suggests: "
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#3C4A53"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:orientation="horizontal">

        <ImageView
            android:spacing="15dp"
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEC97b"
            android:src="@mipmap/tops"
            android:layout_weight="2"
            android:tag="1"
            android:onClick="clickImage1" />

        <ImageView
            android:spacing="15dp"
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEC97b"
            android:src="@mipmap/accessories2"
            android:layout_weight="2"
            android:tag="2"
            android:onClick="clickImage2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:orientation="horizontal">

        <ImageView
            android:spacing="15dp"
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEC97b"
            android:src="@mipmap/bottom"
            android:layout_weight="2"
            android:tag="3"
            android:onClick="clickImage3"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEC97b"
            android:src="@mipmap/shoes"
            android:layout_weight="2"
            android:tag="4"
            android:onClick="clickImage4"/>
    </LinearLayout>

    <LinearLayout
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:weightSum="1">



        <Button
            android:id="@+id/getOutfit"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Outfit ready!"
            android:layout_marginTop="0dp"
            android:background="#3C4A53"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#F7C9BB"
            android:layout_weight="0.87" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.2"
        android:weightSum="1">

        <Button
        android:layout_margin="20dp"
        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:id="@+id/firstAddButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Add"
        android:textColor="#EEC97b"
        android:background="#3C4A53"
            android:layout_weight="0.24" />

    <Button
        android:layout_margin="20dp"
        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:id="@+id/listItemsButton"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Go to galerry -->"
        android:textColor="#EEC97b"
        android:background="#3C4A53"
        />

    </LinearLayout>



</LinearLayout>