<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEC97b">

    <ImageView
        android:layout_gravity="center"
        android:paddingRight="10dp"
        android:id="@+id/idIvImage"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:src="@mipmap/colors2"
        />
    <TextView
        android:paddingRight="30dp"
        android:id="@+id/idTvPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item added successfully!"
        android:layout_gravity="center"
        android:visibility="invisible"
        />
    <Button
        android:textColor="#F7C9BB"
        android:layout_margin="10dp"
        android:layout_gravity="fill_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/idBtnTakePicture"
        android:text="Take picture"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/camera"
        android:background="#3C4A53"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        />
    <Button
        android:textColor="#F7C9BB"
        android:layout_margin="10dp"
        android:layout_gravity="fill_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/backButton"
        android:text="Home"
        android:textSize="25dp"
        android:background="#3C4A53"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        />
